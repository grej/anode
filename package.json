{
  "name": "anode-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Anode - real-time collaborative notebook system",
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "pnpm --recursive --filter='@anode/*' build",
    "build:tsc": "tsc --build",
    "build:tsc:watch": "tsc --build --watch",
    "dev": "pnpm build:schema && concurrently --names 'SCHEMA,DOCWORKER,WEB' --prefix-colors 'yellow,blue,green' 'pnpm --filter @anode/schema watch' 'pnpm --filter @anode/docworker dev' 'pnpm --filter @anode/web-client dev'",
    "dev:tsc": "pnpm build:schema && concurrently --names 'TSC,DOCWORKER,WEB' --prefix-colors 'yellow,blue,green' 'pnpm build:tsc:watch' 'pnpm --filter @anode/docworker dev' 'pnpm --filter @anode/web-client dev'",
    "dev:web-only": "pnpm --filter @anode/web-client dev",
    "dev:kernel": "pnpm --filter @anode/dev-server-kernel-ls-client dev",
    "dev:sync-only": "pnpm --filter @anode/docworker dev",
    "build:schema": "pnpm --filter @anode/schema build",
    "clean": "pnpm --recursive --filter='@anode/*' clean",
    "install:all": "pnpm install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:schema": "vitest run test/schema-validation.test.ts",
    "test:integration": "vitest run test/integration/",
    "test:reactivity": "vitest run test/integration/reactivity-debugging.test.ts",
    "test:kernel": "pnpm --filter @anode/dev-server-kernel-ls-client test",
    "test:debug": "DEBUG_TESTS=true vitest run",
    "lint": "pnpm --recursive --filter='@anode/*' lint",
    "type-check": "pnpm --recursive --filter='@anode/*' type-check",
    "type-check:kernel": "pnpm --filter @anode/dev-server-kernel-ls-client type-check",
    "type-check:schema": "pnpm --filter @anode/schema type-check",
    "lint:kernel": "pnpm --filter @anode/dev-server-kernel-ls-client lint",
    "lint:schema": "pnpm --filter @anode/schema lint",
    "check": "pnpm type-check && pnpm lint",
    "reset-storage": "node reset-local-storage.cjs",
    "start": "echo 'Use pnpm dev to start core services. For Python execution, start kernel with: NOTEBOOK_ID=your-notebook-id pnpm dev:kernel'"
  },
  "devDependencies": {
    "@effect/vitest": "catalog:",
    "@vitest/ui": "catalog:",
    "concurrently": "catalog:",
    "happy-dom": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "effect": "3.15.5",
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "@effect/platform": "0.82.4",
      "@effect/typeclass": "0.34.2",
      "@effect/cluster": "0.34.2",
      "@effect/experimental": "0.46.8",
      "@effect/sql": "0.35.8",
      "@effect/rpc": "0.59.9"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "msgpackr-extract",
      "sharp",
      "workerd"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "anode",
    "collaborative",
    "notebook",
    "real-time",
    "livestore",
    "event-sourcing",
    "python",
    "jupyter",
    "workspace"
  ],
  "author": "Anode Team",
  "license": "MIT",
  "dependencies": {
    "@livestore/adapter-node": "catalog:",
    "@livestore/livestore": "catalog:",
    "@livestore/peer-deps": "catalog:",
    "effect": "catalog:"
  }
}
